# Environment settings
DEBUG=false

# Database URL (SQLite by default, can be changed to MySQL/PostgreSQL)
# SQLite (default):
DATABASE_URL=sqlite:///./inventory.db

# MySQL example:
# DATABASE_URL=mysql+pymysql://user:password@localhost/inventory

# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost/inventory

# JWT Settings - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
